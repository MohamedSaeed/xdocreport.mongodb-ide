<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="fr.opensagres.mongodb.ide.ui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="fr.opensagres.mongodb.ide.ui.Perspective"
            id="fr.opensagres.mongodb.ide.ui.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="%Mongo.category"
            id="fr.opensagres.mongodb.ide.ui">
      </category>         
      <view
            name="%ServerExplorer.name"
            class="fr.opensagres.mongodb.ide.ui.views.ServerExplorer"
            id="fr.opensagres.mongodb.ide.ui.views.ServerExplorer"
            category="fr.opensagres.mongodb.ide.ui"
            icon="icons/obj16/mongo.png" >
      </view>
   </extension>      
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               ratio="0.25f"
               id="fr.opensagres.mongodb.ide.ui.views.ServerExplorer">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="%Mongo.category"
            id="fr.opensagres.mongodb.ide.ui">
      </category>                     
      <wizard
            class="fr.opensagres.mongodb.ide.ui.wizards.NewServerWizard"
            icon="icons/table_go.png"
            id="fr.opensagres.mongodb.ide.ui.wizards.NewServerWizard"
            category="fr.opensagres.mongodb.ide.ui"
            name="%NewServerWizard.name">
      </wizard>
   </extension>
  <extension point="org.eclipse.ui.preferencePages">
    <page
      id="fr.opensagres.mongodb.ide.ui.preferencePage"
      name="%preferenceMongoTitle"
      class="fr.opensagres.mongodb.ide.ui.internal.preferences.MongoPreferencePage">      
    </page>    
  </extension>
     
</plugin>
